<div class="panel-body">
	<div class="col-sm-offset-2 col-sm-8">
		<%= form_for @trainer do |f| %>
			<%= render 'layouts/error_message', error_object: @trainer.errors %>

			<div class="form-group <%= 'has-error' if @trainer.errors.include?(:name) %>">
				<%= f.label :name %>
	    	<%= f.text_field :name, class: 'form-control' %>
	    	<p class="error-message"><%= @trainer.errors.messages[:name].join(' and ') %></p>
			</div>
			<div class="form-group <%= 'has-error' if @trainer.errors.include?(:email) %>">
				<%= f.label :email %>
	    	<%= f.text_field :email, class: 'form-control' %>
	    	<p class="error-message"><%= @trainer.errors.messages[:email].join(' and ') %></p>
			</div>
			<%= f.submit yield(:submit_text), class: 'btn btn-primary center-block' %>
		<% end %>
	</div>
</div>