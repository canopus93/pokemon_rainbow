<div class="panel-body">
	<div class="col-sm-offset-2 col-sm-8">
		<%= form_for @skill do |f| %>
			<%= render 'layouts/error_message', error_object: @skill.errors %>

			<div class="form-group <%= 'has-error' if @skill.errors.include?(:name) %>">
				<%= f.label :name %>
	    	<%= f.text_field :name, class: 'form-control' %>
	    	<p class="error-message"><%= @skill.errors.messages[:name].join(' and ') %></p>
			</div>
			<div class="form-group <%= 'has-error' if @skill.errors.include?(:power) %>">
				<%= f.label :power %>
	    	<%= f.text_field :power, class: 'form-control' %>
	    	<p class="error-message"><%= @skill.errors.messages[:power].join(' and ') %></p>
			</div>
			<div class="form-group <%= 'has-error' if @skill.errors.include?(:max_pp) %>">
				<%= f.label :max_pp %>
	    	<%= f.text_field :max_pp, class: 'form-control' %>
	    	<p class="error-message"><%= @skill.errors.messages[:max_pp].join(' and ') %></p>
			</div>
			<div class="form-group <%= 'has-error' if @skill.errors.include?(:element_type) %>">
				<%= f.label :element_type %>
	    	<%= f.select :element_type, Skill.element_type.options, {prompt: '-- Select --'}, class: 'form-control' %>
	    	<p class="error-message"><%= @skill.errors.messages[:element_type].join(' and ') %></p>
			</div>
			<%= f.submit yield(:submit_text), class: 'btn btn-primary center-block' %>
		<% end %>
	</div>
</div>