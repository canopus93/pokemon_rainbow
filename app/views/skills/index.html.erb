<div class="panel panel-primary">
	<div class="panel-heading">Skills</div>
	<div class="panel-body">
		<a href="<%= new_skill_path %>" class="btn btn-primary">New</a>
		<table class="table table-hover">
			<thead>
				<tr>
					<td>#</td>
					<td>Name</td>
					<td>Power</td>
					<td>Max PP</td>
					<td>Element Type</td>
				</tr>
			</thead>
			<tbody>
				<% @decorated_skills.each_with_index do |skill, index| %>
					<tr class="clickable-row" data-href="<%= skill_path(skill.id) %>">
						<td><%= index + 1 %></td>
						<td><%= skill.name %></td>
						<td><%= skill.power %></td>
						<td><%= skill.max_pp %></td>
						<td><%= skill.element_type %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>