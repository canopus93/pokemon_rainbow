<div class="panel-body">
	<div class="col-sm-offset-2 col-sm-8">
		<%= form_for @pokedex do |f| %>
			<%= render 'layouts/error_message', error_object: @pokedex.errors %>

			<div class="form-group">
				<%= f.label :name %>
	    	<%= f.text_field :name, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :base_health_point %>
	    	<%= f.text_field :base_health_point, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :base_attack %>
	    	<%= f.text_field :base_attack, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :base_defence %>
	    	<%= f.text_field :base_defence, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :base_speed %>
	    	<%= f.text_field :base_speed, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :element_type %>
	    	<%= f.text_field :element_type, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :image_url %>
	    	<%= f.text_field :image_url, class: 'form-control' %>
			</div>
			<%= f.submit class: 'btn btn-primary center-block' %>
		<% end %>
	</div>
</div>