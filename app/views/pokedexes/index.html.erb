<div class="panel panel-primary">
	<div class="panel-heading">Pokedex</div>
	<div class="panel-body">
		<a href="<%= new_pokedex_path %>" class="btn btn-primary btn-xs">New</a>
		<table class="table table-hover">
			<thead>
				<tr>
					<td>#</td>
					<td>Name</td>
					<td>Base Health Point</td>
					<td>Base Attack</td>
					<td>Base Defence</td>
					<td>Base Speed</td>
					<td>Element Type</td>
					<td>Image</td>
				</tr>
			</thead>
			<tbody>
				<% @decorated_pokedexes.each_with_index do |pokedex, index| %>
					<tr class="clickable-row" data-href="<%= pokedex_path(pokedex.id) %>">
						<td><%= index + 1 %></td>
						<td><%= pokedex.name %></td>
						<td><%= pokedex.base_health_point %></td>
						<td><%= pokedex.base_attack %></td>
						<td><%= pokedex.base_defence %></td>
						<td><%= pokedex.base_speed %></td>
						<td><%= pokedex.element_type %></td>
						<td><%= pokedex.image_small %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>